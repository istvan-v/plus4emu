  Function {parseCommand(const char *s)} {open private return_type void
  } {
    code {{
  try {
    if (!s)
      return;
    while (*s == ' ' || *s == '\\t' || *s == '\\r' || *s == '\\n')
      s++;
    if (*s == '\\0')
      return;
    char    c = *(s++);
    std::vector<uint32_t> args;
    while (true) {
      uint32_t  tmp = 0U;
      long      n = parseHexNumber(tmp, s);
      if (!n)           // end of string or error
        break;
      if (n < 0L)       // end of line
        n = (-n);
      else
        args.push_back(tmp);
      s = s + n;
    }
    uint32_t  addrMask = uint32_t(memoryDumpCPUAddressMode ? 0x00FFFFU : 0x3FFFFFU);
    switch (c) {
    case '>':
      if (args.size() < 2)
        throw Plus4Emu::Exception("too few arguments");
      else {
        uint32_t  addr = args[0] & addrMask;
        size_t    byteCnt = 0;
        do {
          gui.vm.writeMemory(addr, uint8_t(args[byteCnt + 1] & 0xFFU),
                             memoryDumpCPUAddressMode);
          addr++;
          addr &= addrMask;
          byteCnt++;
        } while ((byteCnt + 1) < args.size());
      }
      break;
    case 'F':
    case 'f':
      if (args.size() < 3)
        throw Plus4Emu::Exception("too few arguments");
      else {
        uint32_t  addr = args[0] & addrMask;
        uint32_t  endAddr = args[1] & addrMask;
        size_t    byteCnt = 0;
        while (true) {
          gui.vm.writeMemory(addr, uint8_t(args[byteCnt + 2] & 0xFFU),
                             memoryDumpCPUAddressMode);
          if (addr == endAddr)
            break;
          addr++;
          addr &= addrMask;
          byteCnt++;
          if ((byteCnt + 2) >= args.size())
            byteCnt = 0;
        }
      }
      break;
    case 'H':
    case 'h':
      if (args.size() < 3)
        throw Plus4Emu::Exception("too few arguments");
      else {
        uint32_t  addr = args[0] & addrMask;
        uint32_t  addrFound = addr;
        uint32_t  endAddr = args[1] & addrMask;
        size_t    byteCnt = 0;
        while (true) {
          if (gui.vm.readMemory(addr, memoryDumpCPUAddressMode)
              != uint8_t(args[byteCnt + 2] & 0xFFU))
            byteCnt = 0;
          else {
            if (!byteCnt)
              addrFound = addr;
            byteCnt++;
            if ((byteCnt + 2) >= args.size()) {
              memoryDumpViewAddress = addrFound;
              break;
            }
          }
          if (addr == endAddr)
            throw Plus4Emu::Exception("search string not found");
          addr++;
          addr &= addrMask;
        }
      }
      break;
    case 'T':
    case 't':
      if (args.size() != 3)
        throw Plus4Emu::Exception("invalid number of arguments");
      else {
        uint32_t  srcAddr = args[0] & addrMask;
        uint32_t  endAddr = args[1] & addrMask;
        uint32_t  dstAddr = args[2] & addrMask;
        bool      reverseFlag = false;
        if (dstAddr > srcAddr) {
          reverseFlag = true;
          dstAddr = (dstAddr + (endAddr - srcAddr)) & addrMask;
          uint32_t  tmp = srcAddr;
          srcAddr = endAddr;
          endAddr = tmp;
        }
        while (true) {
          gui.vm.writeMemory(dstAddr,
                             gui.vm.readMemory(srcAddr, memoryDumpCPUAddressMode),
                             memoryDumpCPUAddressMode);
          if (srcAddr == endAddr)
            break;
          if (!reverseFlag) {
            srcAddr = (srcAddr + 1U) & addrMask;
            dstAddr = (dstAddr + 1U) & addrMask;
          }
          else {
            srcAddr = (srcAddr - 1U) & addrMask;
            dstAddr = (dstAddr - 1U) & addrMask;
          }
        }
      }
      break;
    default:
      throw Plus4Emu::Exception("unknown command");
    }
  }
  catch (std::exception& e) {
    gui.errorMessage(e.what());
  }
}} {}
